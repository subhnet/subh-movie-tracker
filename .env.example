# Supabase Configuration (Database)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Authentication
# Run `openssl rand -base64 32` to generate a secure secret
JWT_SECRET=your_jwt_secret_min_32_chars

# Movie APIs (Required for details and streaming availability)
# Get a key at https://www.themoviedb.org/documentation/api
TMDB_API_KEY=your_tmdb_api_key
# Get a key at http://www.omdbapi.com/apikey.aspx
OMDB_API_KEY=your_omdb_api_key

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here

# Registration Code
REGISTRATION_ACCESS_CODE=your_registration_access_code_here

# OpenRouter API Key
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Scraper Configuration (Legacy/Optional - for movies.js)
MUST_USERNAME=your_username
PAGE_TIMEOUT=180000
NAVIGATION_TIMEOUT=180000
SCROLL_DISTANCE=100
SCROLL_DELAY=100
FETCH_WATCHED=true
FETCH_WANTS=true
FETCH_SHOWS=true
GENERATE_STATS=true
GENERATE_HTML_REPORT=true
CREATE_BACKUP=true
BACKUP_DIR=backups
